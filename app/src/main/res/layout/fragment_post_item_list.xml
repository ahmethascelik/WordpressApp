<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/layoutSearchQueryInfo"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtSearchQuery"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Clear Search"
            android:id="@+id/btnClearSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"

        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/paginationLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="8dp"
        android:background="@color/mb_pink"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="6"
        tools:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaginationFirst"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_first_page_24"
            app:iconGravity="textEnd" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaginationPrev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_keyboard_arrow_left_24"
            app:iconGravity="textStart" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtPaginationInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/mb_orange"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="12/64"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaginationNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:iconGravity="textEnd" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaginationLast"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_last_page_24"
            app:iconGravity="textStart" />


    </LinearLayout>
</LinearLayout>